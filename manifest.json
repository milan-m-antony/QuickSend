{
    "manifest_version": 3,
    "name": "QuickSend",
    "version": "2.0",
    "description": "P2P File Transfer using WebRTC",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.supabase.co/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}